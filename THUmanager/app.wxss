@import 'style/weui.wxss';
@import "/wxParse/wxParse.wxss";

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
  font-family: '微软雅黑', Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', Arial, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

/*自定义公共样式*/

.text_center {
  text-align: center;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.label-view {
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  padding: 0 15rpx;
  border: 1px solid #5c307d;
  /*background: #909090;*/
  border-radius: 20rpx;
  display: none;
}

.label-view-show {
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  padding: 0 15rpx;
  border: 1px solid #5c307d;
  /*background: #909090;*/
  border-radius: 20rpx;
  display: inline-block;
}

.label-view:nth-child(1) {
  display: inline-block !important;
}

.label-view:nth-child(2) {
  display: inline-block !important;
}

.label-view:nth-child(3) {
  display: inline-block !important;
}

.info_ts {
  text-align: center;
  font-style: oblique;
  color: #707070;
  font-size: 30rpx;
  margin-top: 30rpx;
}

.color_bbb{
  color: #bbb;
}
